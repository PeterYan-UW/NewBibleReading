<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afc.biblereading"
    android:versionCode="2"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:name=".ApplicationSingleton"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <activity
            android:name=".ScheduleActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".CalenderActivity"
            android:label="@string/title_activity_calender" />
        <activity
            android:name=".DailyMission"
            android:label="@string/title_activity_dailymission" />
        <activity
            android:name=".user.CreateSessionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".user.UserActivity"
            android:label="@string/sign_up"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".user.SignUpUserActivity"
            android:label="@string/sign_up"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".user.SignInActivity"
            android:label="@string/sign_in"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".user.ShowUserActivity"
            android:label="@string/show_user"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.UpdateUserActivity"
            android:label="@string/update_user"
            android:screenOrientation="portrait" />

        <activity
            android:name=".group.GroupListActivity"
            android:label="@string/title_activity_group_list" >
        </activity>
        <activity
            android:name=".group.ShowGroupActivity"
            android:label="@string/title_activity_show_group" >
        </activity>
        <activity
            android:name=".group.ShowUserGroupActivity"
            android:label="@string/title_activity_user_group" >
        </activity>
        <activity
            android:name=".Tabs"
            android:label="@string/title_activity_tabs" >
        </activity>
        <activity android:name=".InfoActivity" >
        </activity>

        <receiver android:name=".TimeAlarm" />

        <activity
            android:name=".MemberInfoActivity"
            android:label="@string/title_activity_member_info" >
        </activity>
        <activity
            android:name=".ChooseBookActivity"
            android:label="@string/title_activity_choose_book" >
        </activity>
        <activity
            android:name=".group.UserGroupListActivity"
            android:label="@string/title_activity_user_group_list" >
        </activity>
        <activity
            android:name="com.afc.biblereading.user.SearchUserActivity"
            android:label="@string/title_activity_search_user" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>
